<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/titleBarWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/unlock_mode_management" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBarWrap"
        android:orientation="vertical"
        android:padding="20dp">

        <com.tuya.lock.demo.view.FlowRadioGroup
            android:id="@+id/group_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/unlock_fingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unlock_fingerprint" />

            <RadioButton
                android:id="@+id/unlock_ble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="unlock_ble" />

            <RadioButton
                android:id="@+id/unlock_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unlock_password" />

            <RadioButton
                android:id="@+id/unlock_temporary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unlock_temporary" />

            <RadioButton
                android:id="@+id/unlock_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unlock_dynamic" />

            <RadioButton
                android:id="@+id/unlock_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unlock_card" />

        </com.tuya.lock.demo.view.FlowRadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/unlock_records_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/unlock_mode_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="添加" />

    </LinearLayout>

</RelativeLayout>